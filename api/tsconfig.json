{
  "extends": "./node_modules/@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "moduleDetection": "force",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true
  }
}
